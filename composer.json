{
    "name": "techdock/opcua",
    "description": "Modern OPC UA Client for PHP 8.4+ - PHP implementation based on OPC Foundation UA-.NETStandard architecture",
    "type": "library",
    "license": "MIT",
    "keywords": ["opcua", "opc-ua", "industrial", "automation", "iot", "scada", "plc", "ua-netstandard", "opcfoundation"],
    "homepage": "https://github.com/TECHDOCK-CH/php-opc-ua",
    "authors": [
        {
            "name": "TechDock",
            "email": "info@techdock.ch",
            "homepage": "https://techdock.ch"
        }
    ],
    "support": {
        "issues": "https://github.com/TECHDOCK-CH/php-opc-ua/issues",
        "source": "https://github.com/TECHDOCK-CH/php-opc-ua",
        "docs": "https://github.com/TECHDOCK-CH/php-opc-ua/tree/main/docs"
    },
    "require": {
        "php": "^8.4",
        "ext-sockets": "*",
        "phpseclib/phpseclib": "^3.0",
        "psr/log": "^3.0",
        "psr/simple-cache": "^3.0",
        "wapmorgan/binary-stream": "^0.4",
        "symfony/cache": "^7.0",
        "brick/date-time": "^0.7",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "TechDock\\OpcUa\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TechDock\\OpcUa\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage/",
        "analyse": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "all": [
            "@cs-check",
            "@analyse",
            "@test"
        ]
    },
    "suggest": {
        "react/event-loop": "^1.5 - For async I/O and high-performance scenarios",
        "react/promise": "^3.0 - Promise-based async operations",
        "amphp/amp": "^3.0 - Alternative async framework"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "platform": {
            "php": "8.4"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
