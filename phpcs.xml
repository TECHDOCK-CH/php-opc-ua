<?xml version="1.0"?>
<ruleset name="PHP OPC UA">
    <description>Coding standard for PHP OPC UA project</description>

    <!-- Use PSR-12 as base -->
    <rule ref="PSR12">
        <!-- Allow multiple related declarations (enum + class, interface + interface) in same file -->
        <exclude name="PSR1.Classes.ClassDeclaration.MultipleClasses"/>
    </rule>

    <!-- Customize Line Length -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="180"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>

    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Use colors -->
    <arg name="colors"/>

    <!-- Paths to check -->
    <file>src</file>

    <!-- Exclude vendor and other generated files -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
</ruleset>
